<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_gradient"
    tools:context=".RegisterActivity">

<!--

    <ImageView
        android:id="@id/back"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#7fffffff" />
-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:divider="@drawable/diviedr_patient"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle">

        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_person_24"
            android:background="@drawable/circle"
            />

        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/patient_add_back"
            android:id="@+id/patient_add_name"
            />


        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Age"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/patient_add_back"
            android:id="@+id/patient_add_age"
            />


        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Address"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/patient_add_back"
            android:id="@+id/patient_add_address"
            />


        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Phone"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/patient_add_back"
            android:id="@+id/patient_add_phone"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:id="@+id/patient_add_save_button"
            android:text="Save"
            />
    </LinearLayout>

</RelativeLayout>